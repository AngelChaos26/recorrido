<div class="grid grid-cols-6 gap-4">
    <div class="sm:text-sm font-semibold"><%= week_text_format(week) %></div>
    <%= link_to "Regresar", services_path(company_id: company.id, week: week_value_format(week)), 
                class: "col-end-7 col-span-2 bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded" %>
</div>

<div class="grid grid-cols-3 gap-4">
    <% (0..6).each do |wday| %>
        <div class="flex flex-col overflow-auto" data-checkbox-option-target="content-<%= week_value_format(week + wday) %>">
            <%= render partial: "companies/edit/service_week", locals: { day:               week + wday,
                                                                         company_schedules: company_schedules, 
                                                                         company_services:  company_services } %>
        </div>
    <% end %>
</div>